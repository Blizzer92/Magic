CXX = g++
CXXFLAGS = -g -Wno-write-strings
LDFLAGS = -g

include config.makefile

SOURCES = $(wildcard *.cpp) $(wildcard Magicengine/*.cpp)
OBJECTS = $(patsubst %.cpp,%.o,$(SOURCES))
GENERATED = test $(OBJECTS)

all: test .gitignore

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $?

test: $(OBJECTS)
	$(CXX) -o $@ $? $(LDFLAGS)

include doku.makefile

clean:
	rm -fv $(GENERATED)

.gitignore:
	echo '# FILE IS GENERATED BY MAKE - DO NOT EDIT' > $@
	echo '/config.makefile'
	for file in $(GENERATED) ; do \
		echo /$$file >> $@ ; \
	done \
	cat gitignore_append >> $@

.PHONY: all clean
